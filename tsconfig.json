{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "baseUrl": "./",
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}